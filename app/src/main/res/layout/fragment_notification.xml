<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.homepage.notification.NotificationFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/relax"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/relax"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.67"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/notificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AÃºn no tienes notificaciones."
        android:textColor="@color/colorFont"
        android:fontFamily="@font/fredoka_regular"
        android:layout_marginTop="550dp"
        app:layout_constraintTop_toBottomOf="@id/relax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</FrameLayout>