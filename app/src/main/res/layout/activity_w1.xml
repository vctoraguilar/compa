<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.welcome.W1Activity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/hihello"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Bienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.67"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/Bienvenida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hola Compa!"
        android:textColor="@color/colorFont"
        android:textSize="24sp"
        android:fontFamily="@font/fredoka_bold"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/textSaludo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:text="Estamos contigo para ayudarte a escalar tu negocio."
        android:textColor="@color/colorFont"
        android:fontFamily="@font/fredoka_regular"
        app:layout_constraintTop_toBottomOf="@id/Bienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/next_page_96px"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
